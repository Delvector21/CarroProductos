<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".VerProductoActivity">
    <include layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/nombreProdTxt"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_prod"

        android:textSize="@dimen/titulo_app_size"
         >

    </TextView>
    <ImageView
        android:layout_marginTop="@dimen/margin_top_prod"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_prod_view"
        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_prod_view">

    </TextView>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_top_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/titulo_app_size"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/precio_prod_view"
        >

    </TextView>
    </LinearLayout>
</LinearLayout>